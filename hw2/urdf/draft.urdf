<?xml version="1.0"?>
<robot name="materials">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>


  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.2 0.3 0.6"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="right_leg">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.9"/>
      </geometry>
      <origin xyz="0.105 0 0.0" rpy="0.0 0.0 0.0"/>
      
      <material name="white"/>
    </visual>
  </link>
  <joint name="base_to_right" type="continuous"> 
    <parent link="base_link"/>
    <child link="right_leg"/>
    <axis xyz="0.0 1 0.0"/>
    <origin xyz="0.0 -0.155 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  
</robot>